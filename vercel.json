{
  "version": 2,
  "buildCommand": "cd packages/web && npm install && npm run build",
  "outputDirectory": "packages/web/dist",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/calendar/(.*)",
      "destination": "/api/calendar"
    },
    {
      "source": "/api/customers/(.*)",
      "destination": "/api/customers"
    },
    {
      "source": "/api/saju/(.*)",
      "destination": "/api/saju"
    },
    {
      "source": "/api/diaries/(.*)",
      "destination": "/api/diaries"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}