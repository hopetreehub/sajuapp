{
  "version": 2,
  "name": "sajuapp-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/calendar/(.*)",
      "dest": "https://calendar-service-production.up.railway.app/api/calendar/$1"
    },
    {
      "src": "/api/diary/(.*)",
      "dest": "https://diary-service-production.up.railway.app/api/diary/$1"
    },
    {
      "src": "/api/saju/(.*)",
      "dest": "https://saju-service-production.up.railway.app/api/saju/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://api-gateway-production.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://api-gateway-production.up.railway.app",
    "VITE_CALENDAR_SERVICE_URL": "https://calendar-service-production.up.railway.app",
    "VITE_DIARY_SERVICE_URL": "https://diary-service-production.up.railway.app",
    "VITE_SAJU_SERVICE_URL": "https://saju-service-production.up.railway.app"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}